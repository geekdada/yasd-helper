{
  "name": "yasd-helper",
  "version": "0.1.3",
  "description": "An ad-hoc host for proxying Surge HTTP API",
  "repository": "https://github.com/geekdada/yasd-helper.git",
  "author": "Roy Li <me@dada.li>",
  "license": "MIT",
  "private": false,
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "bin": {
    "yasd-helper": "bin/yasd-helper.js"
  },
  "scripts": {
    "dev": "tsc -p tsconfig.json --watch",
    "test": "run-s test:*",
    "test:lint": "eslint -c .eslintrc.js --ext .js,.ts .",
    "test:unit": "run-s build && jest",
    "coverage": "jest --forceExit --coverage",
    "clean": "rimraf build",
    "build": "run-s clean && tsc -p tsconfig.json",
    "build:binary": "pkg --target node12-macos,node12-win,node12-linux,node12-alpine --out-path ./binary-build .",
    "prepublish": "run-s build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "pub": "np",
    "version": "npm run changelog && git add ."
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/h2o2": "^9.0.2",
    "@hapi/hapi": "^20.0.1",
    "@surgio/logger": "^1.1.3",
    "axios": "^0.21.0",
    "chalk": "^4.1.0",
    "common-bin": "^2.9.0",
    "fs-extra": "^9.0.1",
    "hapi-pino": "^8.3.0",
    "ini": "^1.3.5",
    "lodash": "^4.17.20",
    "node-forge": "^0.10.0",
    "source-map-support": "^0.5.18"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@types/fs-extra": "^9.0.2",
    "@types/hapi-pino": "^8.0.1",
    "@types/hapi__h2o2": "^8.3.2",
    "@types/hapi__hapi": "^20.0.1",
    "@types/ini": "^1.3.30",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.14.5",
    "@types/node-forge": "^0.9.5",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "conventional-changelog-cli": "^2.0.31",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.6",
    "np": "^6.3.1",
    "npm-debug-log-cleaner": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.9",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "type-fest": "^0.18.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "bin",
    "build",
    "README.md",
    "README_zh-CN.md",
    "yarn.lock"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.ts": "eslint --ext .ts"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm-debug-log-cleaner && lint-staged"
    }
  },
  "keywords": [
    "yasd",
    "surge"
  ],
  "pkg": {
    "scripts": "build/**/*.js"
  }
}
